###############################
# Special Binding Mode Launch #
###############################
# Press $mod+o followed by either s, m, Escape or Return to launch gnome-sound-recorder,
# gnome-mahjonng, urxvt, or return to the default mode.
set $mode_launcher Launch: [s]gnome-sound-recorder [m]gnome-mahjonng [u]rxvt
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym s exec gnome-sound-recorder
    bindsym m exec gnome-mahjongg
    bindsym u exec urxvt
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

